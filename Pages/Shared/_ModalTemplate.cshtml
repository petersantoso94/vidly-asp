@model vidly.Models.View.ModalClass

<!-- Modal -->
<div class="modal fade" id="@Model.ModalId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Model.BodyText
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Model.CancelButtonText</button>
                <button type="button" class="btn btn-primary" id="@Model.OkButtonId">@Model.OkButtonText</button>
            </div>
        </div>
    </div>
</div>
